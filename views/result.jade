extends layout

block content
  .container.h-100
    .row.h-100.justify-content-center.align-items-center
      if messages.error
        .alert.alert-danger(role='alert')
          for error in messages.error
            div= error.msg
      if messages.success
        .alert.alert-success(role='alert')
          for success in messages.success
            div= success.msg
      if messages.info
        .alert.alert-info(role='alert')
          for info in messages.info
            div= info.msg

      .row
        .col-sm-12
          .panel
            .panel-body
              h3= link.title
              p= link.description
              a.btn.btn-primary(href=link.href, role='button') Download
              a.btn.btn-success(href='/', role='button') New Search
